<Window x:Class="Countries.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Countries"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">

    <Grid Margin="0,0,2,-21" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="202*"/>
            <ColumnDefinition Width="989*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Button" HorizontalAlignment="Left" Margin="714.5,392,0,322"  Width="170" Height="75" Grid.Column="1"/>
        <ComboBox x:Name="cb_flag" HorizontalAlignment="Left" Margin="143.5,70,0,0" VerticalAlignment="Top" Width="378" Height="40" Grid.Column="1"/>
        <ListBox x:Name="lb_countries" HorizontalAlignment="Left" Height="452" Margin="104,196,0,0" VerticalAlignment="Top" Width="294" SelectionChanged="lb_countries_SelectionChanged" Grid.ColumnSpan="2"/>
        <Label Content="Capital" HorizontalAlignment="Left" Margin="268.5,366,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.489,0.577" Width="108" FontSize="21" Height="41" Grid.Column="1"/>
        <Label Content="Region" HorizontalAlignment="Left" Margin="268.5,412,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.489,0.577" Width="82" FontSize="21" Height="45" Grid.Column="1"/>
        <Label Content="Sub Region" HorizontalAlignment="Left" Margin="268.5,462,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.489,0.577" Width="127" FontSize="21" Height="43" Grid.Column="1"/>
        <Label Content="Population" HorizontalAlignment="Left" Margin="268.5,510,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.489,0.577" Width="108" Height="38" FontSize="21" Grid.Column="1"/>
        <Label x:Name="lbl_capital" Content="{Binding Path=SelectedItem.capital, TargetNullValue='N/A'}"  HorizontalAlignment="Left" Margin="413.5,366,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.489,0.577" Width="267" FontSize="21" Height="41" Grid.Column="1"/>
        <Label x:Name="lbl_region" Content="{Binding Path=SelectedItem.region, TargetNullValue='N/A'}"  HorizontalAlignment="Left" Margin="413.5,407,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.489,0.577" Width="267" FontSize="21" Height="41" Grid.Column="1"/>
        <Label x:Name="lbl_subregion" Content="sr" HorizontalAlignment="Left" Margin="413.5,462,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.495,0.537" Width="323" FontSize="21" Height="41" Grid.Column="1"/>
        <Label x:Name="lbl_population" Content="pp" HorizontalAlignment="Left" Margin="413.5,510,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="175" FontSize="21" Height="41" Grid.Column="1"/>
        <Image x:Name="img_flag" Source="{Binding Path=SelectedItem.FlagImgPath}" HorizontalAlignment="Left" Height="72" Margin="330.5,176,0,0" VerticalAlignment="Top" Width="145" Grid.Column="1"/>

    </Grid>
</Window>
